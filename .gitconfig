[core]
        quotepath = false
        autocrlf = input
        # excludesfile = ~/.gitignore
[user]
        name = wsgggws
        email = wsgggws@gmail.com

[column]
        ui = auto
[branch]
        sort = -committerdate
[tag]
        sort = version:refname
[init]
        defaultBranch = main
[diff]
        algorithm = histogram
        colorMoved = plain
        mnemonicPrefix = true
        renames = true
	tool = kitty
[push]
        default = simple
        autoSetupRemote = true
        followTags = true
[fetch]
        prune = true
        pruneTags = true
        all = true

# why the hell not?

[help]
        autocorrect = prompt
[commit]
        verbose = true
[rerere]
        enabled = true
        autoupdate = true
[rebase]
        autoSquash = true
        autoStash = true
        updateRefs = true

[pull]
        rebase = true

[alias]
        lg = log --color --graph --pretty=format:'%C(auto)%h%C(reset) -%C(bold blue)%d%C(reset) %s %C(dim white)- %an, %ar%C(reset)' --abbrev-commit
        lgg = log --color --graph --all --pretty=format:'%C(auto)%h%C(reset) -%C(bold blue)%d%C(reset) %s %C(dim white)- %an, %ar%C(reset)' --abbrev-commit
        lgs = log --color --graph --pretty=format:'%C(auto)%h%C(reset) %Cgreen%ad%Creset %C(bold blue)%d%C(reset) %C(bold white)%s%C(reset) %C(dim cyan)[%an]%C(reset)' --date=short
        lol = log --graph --decorate --oneline
        hist = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
[difftool "kitty"]
	cmd = kitty +kitten diff $LOCAL $REMOTE
